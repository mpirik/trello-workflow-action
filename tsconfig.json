{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["esnext"],
    "moduleResolution": "node",

    "inlineSourceMap": true,

    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
}
